{
  "compilerOptions": {
    "outDir": "dist", //输出目录
    "sourceMap": true,//采用sourceMap
    "target": "ES2016",//目标语法
    "module": "ESNext",//模块语法
    "moduleResolution": "node",//模块解析方式
    "strict": false,//严格模式
    "resolveJsonModule": true,//解析json模块
    "esModuleInterop": true,//允许通过es6语法引入commonjs模块
    "jsx": "preserve",//jsx不转义
    "lib": ["ESNext", "DOM"],//支持的类库 esnext以及dom
    
    "baseUrl": ".", //以当前根目录解析
    "paths": {
      "@vue/*": ["packages/*/src"] //引入@vue/reactivity就是引入packages/reactivity/src
    }

  }
}